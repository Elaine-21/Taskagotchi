<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_fading_line"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="411dp"
        android:layout_height="316dp">

        <TextView
            android:id="@+id/welcome_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/luckiest_guy"
            android:text="WELCOME TO"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/title_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="239dp"
            android:layout_height="42dp"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/luckiest_guy"
            android:gravity="center_horizontal"
            android:shadowColor="#000000"
            android:shadowDx="15"
            android:shadowDy="8"
            android:shadowRadius="10"
            android:text="TASKAGOTCHI"
            android:textColor="#FBD86A"
            android:textColorHighlight="#00DF1717"
            android:textColorHint="#00B12323"
            android:textSize="32sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/username_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lexend_medium"
        android:gravity="center_horizontal"
        android:text="Username"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/username_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/login_textbox"
        android:ems="10"
        android:fontFamily="@font/lexend_light"
        android:gravity="center_horizontal"
        android:inputType="text"
        android:padding="3dp"
        android:text="Enter Username"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/pass_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/lexend_medium"
        android:gravity="center_horizontal"
        android:text="Password"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/login_textbox"
        android:ems="10"
        android:fontFamily="@font/lexend_light"
        android:gravity="center_horizontal"
        android:inputType="text"
        android:padding="3dp"
        android:text="Enter Password"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:layout_marginTop="35dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/lexend_extralight"
            android:gravity="right"
            android:text="Don't have an account yet?  "
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/lexend_light"
            android:text="Sign up now"
            android:textSize="10sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="116dp"
        android:layout_height="33dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="130dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/button"
        android:gravity="center_horizontal|center_vertical"
        android:text="Button"
        android:textSize="12sp" />

</LinearLayout>