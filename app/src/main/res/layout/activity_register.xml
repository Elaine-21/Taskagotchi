<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/background_fading_line"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="411dp"
        android:layout_height="316dp">

        <TextView
            android:id="@+id/create_your"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="172dp"
            android:fontFamily="@font/luckiest_guy"
            android:text="Create your"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="239dp"
            android:layout_height="42dp"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/luckiest_guy"
            android:gravity="center_horizontal"
            android:shadowColor="#000000"
            android:shadowDx="15"
            android:shadowDy="8"
            android:shadowRadius="10"
            android:text="TASKAGOTCHI"
            android:textColor="#FBD86A"
            android:textColorHighlight="#00DF1717"
            android:textColorHint="#00B12323"
            android:textSize="32sp"
            app:layout_constraintBottom_toTopOf="@+id/account_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/create_your"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/account_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/luckiest_guy"
            android:text="Account"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/register_username_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lexend_medium"
        android:gravity="center_horizontal"
        android:text="Username"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/register_username_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/login_textbox"
        android:ems="10"
        android:fontFamily="@font/lexend_light"
        android:gravity="center_horizontal"
        android:inputType="text"
        android:padding="3dp"
        android:text="Enter Username"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/register_pass1_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/lexend_medium"
        android:gravity="center_horizontal"
        android:text="Password"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/register_pass1_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/login_textbox"
        android:ems="10"
        android:fontFamily="@font/lexend_light"
        android:gravity="center_horizontal"
        android:inputType="textPassword"
        android:padding="3dp"
        android:text="Enter Password"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/register_pass2_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/lexend_medium"
        android:gravity="center_horizontal"
        android:text="Password"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/register_pass2_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/login_textbox"
        android:ems="10"
        android:fontFamily="@font/lexend_light"
        android:gravity="center_horizontal"
        android:inputType="textPassword"
        android:padding="3dp"
        android:text="Enter Password"
        android:textColor="#000000"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:layout_marginTop="35dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/lexend_extralight"
            android:gravity="right"
            android:text="Alaready have an account?  "
            android:textColor="#000000"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/login_now_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/lexend_light"
            android:text="Log in now"
            android:textColor="#000000"
            android:textSize="10sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/register_btn"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="130dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/button"
        android:gravity="center_horizontal|center_vertical"
        android:text="Register"
        android:textSize="12sp" />

</LinearLayout>